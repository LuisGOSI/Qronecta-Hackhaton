.carousel-image {
  position: relative;
}

.carousel-image:hover .overlay {
  opacity: 1;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  border-radius: 20px;
  transition: opacity 0.3s ease;
}

.overlay p {
  color: white;
  font-size: 18px;
  font-weight: bold;
}


</style>
