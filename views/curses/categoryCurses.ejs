<%- include("../header/index")%> 
<%- include("../menu/menuGeneral")%>
<link rel="stylesheet" href="/css/wave.css" />
<header class="hero1">
    <div class="container1">
      <section class="hero__container1">
        <div class="projects__grid">
      
          <article class="container text-center">
            <div class="hero__texts">
                <h1 class="hero__title" style="text-align: center; color: #063f77">
                    <%= tipo.toUpperCase() %>
                  </h1>
          </div>
          </article>
      
      </div>  
      </section>
    </div>
    <div id="scrollspyHeading1" class="hero__wave" style="overflow: hidden;" ><svg  viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;"><path class="light-mode-wave" id="wave-color" d="M0.00,49.98 C150.00,150.00 349.20,-49.98 500.00,49.98 L500.00,150.00 L0.00,150.00 Z" style="stroke: none;"></path></svg></div>
  </header>
<div class="inorganic-options-div mt-5">
    <% cursos.forEach((curso, index)=> { %>
        <div class="inorganic-option">
            <!-- <div class="animation curs"> -->
            <div >
                <a href="/curso/<%= curso.id %>">
                    <div class="carousel-image">
                        <video height="400px" src="/videos/<%= curso.video %>?v=<%= Date.now() %>" class="imagen-inor" alt="Img">
                        </video>
                        <div class="overlay">
                            <p><%= curso.titulo.toUpperCase() %></p>
                        </div>
                    </div>
                    
                </a>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<style>
.inorganic-options-div {
    margin-left: 20px;
    margin-right: 20px;
    margin-bottom: 100px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    /* Tres columnas igualmente distribuidas */
    grid-gap: 20px;
    /* Espacio entre elementos */
}

.inorganic-option {
    border-radius: 20px;
    background-color: white;
    box-shadow: 2px 4px 12px rgba(0, 0, 0, 0.2);
}

.imagen-inor {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
    cursor: pointer;
}



