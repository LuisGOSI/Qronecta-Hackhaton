<%- include("../header/index")%>

    <%- include("../menu/menuAdmin")%>

        <link rel="stylesheet" href="/css/adminAdd.css">
        <br><br><br>

        <h2 class="text-center" style="z-index: 999;">Mis cursos</h2>
        <div id="carouselTodosLosCursos" class="carousel slide" style="width: 90%; margin: auto;">
            <div class="carousel-inner">
                <% var count=0; %>
                    <% cursos.forEach((curso, index)=> { %>
                        <% if (curso.autor == sesion.nombre) { %>  /
                            <% console.log(curso.correo); %>
                            <% if (count % 3 == 0) { %>
                                <div class="carousel-item <%= count == 0 ? 'active' : '' %>">
                                    <div class="row">
                            <% } %>
                                <div class="col-md-4">
                                    <a href="/curso/<%= curso.id %>">
                                        <video height="400px"
                                            src="/videos/<%= curso.video %>?v=<%= Date.now() %>"
                                            class="d-block w-100" alt="...">
                                    </a>
                                </div>
                            <% if (count % 3 == 2) { %>
                                    </div>
                                </div>
                            <% } %>
                            <% count++; %>
                        <% } %>
                    <% }) %>
                <% if (count % 3 != 0) { %>
            </div>
        </div>
        <% } %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselTodosLosCursos"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselTodosLosCursos"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>

           